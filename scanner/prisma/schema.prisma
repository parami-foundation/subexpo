datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ChainBlock {
  blockNum        Int              @id
  blockAt         Int
  blockHash       String           @unique
  parentHash      String
  stateRoot       String
  extrinsicsRoot  String
  logs            ChainLog[]
  extrinsics      ChainExtrinsic[]
  extrinsicsCount Int
  events          ChainEvent[]
  eventsCount     Int
  specVersion     Int
  validator       String
  finalized       Boolean          @default(false)
  ChainBlob       ChainBlob[]
}

model ChainEvent {
  eventId        String          @id
  blockNum       Int
  blockAt        Int
  extrinsicId    String?
  section        String
  method         String
  args           Json
  accountId      String?
  ChainBlock     ChainBlock?     @relation(fields: [blockNum], references: [blockNum], onDelete: Cascade, onUpdate: Cascade)
  ChainExtrinsic ChainExtrinsic? @relation(fields: [extrinsicId], references: [extrinsicId], onDelete: Cascade, onUpdate: Cascade)

  @@index([accountId])
  @@index([section, method])
}

model ChainExtrinsic {
  extrinsicId     String         @id
  blockNum        Int
  blockAt         Int
  method          String
  section         String
  args            Json
  calls           String?
  events          ChainEvent[]
  accountId       String?
  signature       String?
  nonce           Int
  extrinsicHash   String         @unique
  isSigned        Boolean
  kind            Int            @default(0) @db.SmallInt
  success         Boolean
  error           Json?
  fee             String
  tip             String
  versionInfo     Int
  extrinsicLength Int
  finalized       Boolean        @default(false)
  ChainBlock      ChainBlock?    @relation(fields: [blockNum], references: [blockNum], onDelete: Cascade, onUpdate: Cascade)
  transfer        ChainTransfer?

  @@index([accountId])
  @@index([section, method])
}

model ChainLog {
  logId      String      @id
  blockNum   Int
  logType    String
  args       Json
  ChainBlock ChainBlock? @relation(fields: [blockNum], references: [blockNum], onDelete: Cascade, onUpdate: Cascade)
}

model ChainVersion {
  specVersion   Int  @id
  modules       Json
  mergedModules Json
  rawData       Json
}

model ChainTransfer {
  extrinsicId    String          @id
  blockNum       Int
  blockAt        Int
  from           String
  to             String
  amount         String
  section        String
  method         String
  success        Boolean
  nonce          Int
  ChainExtrinsic ChainExtrinsic? @relation(fields: [extrinsicId], references: [extrinsicId], onDelete: Cascade, onUpdate: Cascade)

  @@index([from])
  @@index([to])
  @@index([blockNum])
}

model ChainBlob {
  hash       String      @id
  data       Bytes
  blockNum   Int
  ChainBlock ChainBlock? @relation(fields: [blockNum], references: [blockNum], onDelete: Cascade, onUpdate: Cascade)
}
